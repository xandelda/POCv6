<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="poc.com.br.pocv6.CadastrarActivity"
    tools:showIn="@layout/activity_cadastrar"
    android:orientation="vertical"
    android:background="@drawable/back7"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cadastre-se"
        android:layout_gravity="center"
        android:textColor="@color/colorMinha2"
        android:id="@+id/textView"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="seja mais um democrÃ¡tico."
        android:layout_gravity="center"
        android:id="@+id/textView5"
        android:textStyle="italic"
        android:layout_marginTop="3dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n Nome"
                        android:textColor="#000000"
                        android:drawableLeft="@mipmap/nome"
                        android:id="@+id/textView2" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapSentences"
                        android:ems="10"
                        android:id="@+id/edtNome"
                        android:maxLength="100"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n Email"
                        android:id="@+id/textView8"
                        android:drawableLeft="@mipmap/arroba"
                        android:textColor="#000000"
                        android:layout_marginTop="30dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/edtEmail"
                        android:textStyle="italic"
                        android:maxLength="100"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n Senha"
                        android:id="@+id/textView7"
                        android:drawableLeft="@mipmap/senha"
                        android:textColor="#000000"
                        android:layout_marginTop="30dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/edtSenha"
                        android:textStyle="italic"
                        android:maxLength="100"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n CPF"
                        android:drawableLeft="@mipmap/cpf"
                        android:id="@+id/textView3"
                        android:textColor="#000000"
                        android:layout_marginTop="30dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edtCPF"
                        android:textStyle="italic"
                        android:maxLength="11"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n Cidade"
                        android:drawableLeft="@mipmap/cidade"
                        android:id="@+id/textView4"
                        android:textColor="#000000"
                        android:layout_marginTop="30dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapSentences"
                        android:ems="10"
                        android:id="@+id/edtCidade"
                        android:maxLength="100"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="\n Estado"
                        android:drawableLeft="@mipmap/estado"
                        android:id="@+id/textView6"
                        android:textColor="#000000"
                        android:layout_marginTop="30dp"
                        />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:inputType="textPersonName"
                            android:id="@+id/edtEstado"
                            android:textStyle="italic"
                            android:text="  selecione um estado"
                            android:enabled="false"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:background="@android:drawable/ic_menu_more"
                            android:id="@+id/btSelecionar"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        >

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancelar"
                            android:id="@+id/btCancelarCadastro"
                            android:textStyle="bold"
                            android:drawableLeft="@mipmap/cancel"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Salvar"
                            android:textStyle="bold"
                            android:id="@+id/btSalvarDados"
                            android:drawableLeft="@mipmap/confirm4"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
